<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_info_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.AdditionalInformationActivity"
    >
    <include
        layout="@layout/layout_header"
        android:id="@+id/my_info_layout_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/my_Info_title_tv"
        android:text="기본 정보"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/my_info_layout_header"
        app:layout_constraintStart_toStartOf="@id/my_info_nickname_title_tv"
        android:layout_marginTop="33dp"
        />
    <TextView
        android:id="@+id/my_info_nickname_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/my_Info_title_tv"
        app:layout_constraintStart_toStartOf="@id/my_info_nick_input_et"
        />
    <EditText
        android:id="@+id/my_info_nick_input_et"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:hint="닉네임을 입력해 주세요"
        android:text="오늘은 맑음"
        android:inputType="textPersonName"
        android:textColorHint="#9FA8DA"
        android:paddingBottom="14dp"
        android:textFontWeight="900"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/my_info_nickname_title_tv"
        android:paddingStart="16dp"
        android:lineHeight="19sp"
        android:paddingTop="13dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />
    <TextView
        android:id="@+id/my_info_birth_year_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출생년도"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/my_info_nick_input_et"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/my_info_birth_year_input_tv"
        />
    <TextView
        android:id="@+id/my_info_birth_year_input_tv"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:hint="출생년도를 입력해 주세요"
        android:textColorHint="#9FA8DA"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:lineHeight="19sp"
        android:paddingTop="13dp"
        android:text="1995"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_info_birth_year_title_tv"
        />

    <ImageView
        android:id="@+id/my_info_birth_arrow_down_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="19sp"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintTop_toTopOf="@id/my_info_birth_year_input_tv"
        app:layout_constraintBottom_toBottomOf="@id/my_info_birth_year_input_tv"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@id/my_info_birth_year_input_tv"
        />
    <TextView
        android:id="@+id/my_info_age_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연령대 지정"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/my_info_birth_year_input_tv"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/my_info_birth_year_title_tv"
        />
    <TextView
        android:id="@+id/my_info_age_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지정된 연령대로 일기가 공유됩니다."
        android:layout_marginTop="6dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/my_info_age_title_tv"
        android:textColor="#9CA3D4"
        app:layout_constraintStart_toStartOf="@id/my_info_birth_year_title_tv"
        />
        <LinearLayout
            android:id="@+id/my_info_age_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/my_info_age_subtitle_tv"
            app:layout_constraintStart_toStartOf="@id/my_info_age_subtitle_tv"
            >
            <Button
                android:id="@+id/my_info_age_similar_btn"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/additional_gender_selector"
                android:text="비슷한 연령대"
                android:textColor="@drawable/selector_text"
                android:textSize="16sp"
                android:lineHeight="19sp"
                android:textAlignment="center"
                android:paddingTop="8dp"
                android:paddingBottom="9dp"
                android:layout_marginEnd="10dp"
                android:textColorHighlight="#FFFFFF"
                android:paddingStart="34dp"
                android:paddingEnd="34dp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/my_info_age_no_btn"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/additional_gender_selector"
                android:text="선택하지 않음"
                android:textColor="@drawable/selector_text"
                android:textSize="16sp"
                android:lineHeight="19sp"
                android:textAlignment="center"
                android:paddingBottom="9dp"
                android:paddingTop="8dp"
                android:paddingStart="34dp"
                android:paddingEnd="34dp"
                android:textStyle="bold"
                />
        </LinearLayout>
    <TextView
        android:id="@+id/my_info_gender_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/my_info_age_btn_layout"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/my_info_gender_btn_layout"
        />
    <LinearLayout
        android:id="@+id/my_info_gender_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/my_info_gender_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        >
        <Button
            android:id="@+id/my_info_gender_male_btn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/additional_gender_selector"
            android:text="남자"
            android:textColor="@drawable/selector_text"
            android:textSize="16sp"
            android:lineHeight="19sp"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:paddingBottom="9dp"
            android:layout_marginEnd="10dp"
            android:textColorHighlight="#FFFFFF"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/my_info_gender_female_btn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/additional_gender_selector"
            android:text="여자"
            android:textColor="@drawable/selector_text"
            android:textSize="16sp"
            android:lineHeight="19sp"
            android:textAlignment="center"
            android:paddingBottom="9dp"
            android:paddingTop="8dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/my_info_gender_no_btn"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/additional_gender_selector"
            android:text="선택하지 않음"
            android:textColor="@drawable/selector_text"
            android:textSize="16sp"
            android:lineHeight="19sp"
            android:paddingBottom="9dp"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/my_info_divider_tv"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        app:layout_constraintTop_toBottomOf="@id/my_info_gender_btn_layout"
        android:background="#2E3795"
        android:layout_marginTop="30dp"
        />
    <View
        android:id="@+id/my_info_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/my_info_divider_tv"
       />
    <TextView
        android:id="@+id/my_info_leave_btn_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="탈퇴하기"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/my_info_divider_tv"
        app:layout_constraintStart_toStartOf="@id/my_Info_title_tv"
        android:layout_marginTop="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>