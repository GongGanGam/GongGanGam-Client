<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/background_dialog"
    android:layout_weight="1"
    >
        <TextView
            android:id="@+id/datepicker_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출생년도를 선택해 주세요"
            android:textColor="#222222"
            android:textSize="16sp"
            android:lineHeight="19sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"

            />

        <NumberPicker
            android:id="@+id/datepicker_birth_year_picker_np"
            android:layout_width="90dp"
            android:layout_height="138dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/datepicker_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:theme="@style/AppTheme.Picker"
            android:layout_marginTop="30dp"

            />
    <Button
        android:id="@+id/datepicker_birth_year_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="선택"
        android:gravity="center"
        android:background="@drawable/background_dialog_btn"
        android:textAlignment="center"
        android:textColor="#181B74"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:lineHeight="19sp"
        app:layout_constraintTop_toBottomOf="@id/datepicker_birth_year_picker_np"
        />



    </androidx.constraintlayout.widget.ConstraintLayout>
