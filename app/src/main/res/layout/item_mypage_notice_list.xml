<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_mypage_notice_constraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginTop="16dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/item_mypage_notice_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공간감을 이용해 주셔서 감사합니다."
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/item_mypage_notice_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21.12.28"
            android:textColor="#9CA3D4"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/item_mypage_notice_title_tv"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/item_mypage_notice_arrowDown_iv"
            android:layout_width="12dp"
            android:layout_height="7dp"
            android:src="@drawable/arrow_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="34dp"
            />

        <ImageView
            android:id="@+id/item_mypage_notice_arrowUp_iv"
            android:layout_width="12dp"
            android:layout_height="7dp"
            android:src="@drawable/arrow_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="34dp"
            android:visibility="gone"
            />

        <View
            android:id="@+id/mypage_notice_rectangle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5963B7"
            app:layout_constraintTop_toBottomOf="@+id/item_mypage_notice_date_tv"
            android:layout_marginTop="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/mypage_notice_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#2E3795"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mypage_notice_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="33dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/content01"
            android:textColor="#ffffff"/>

        <View
            android:id="@+id/mypage_notice_rectangle_02"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5963B7"
            />

    </LinearLayout>

