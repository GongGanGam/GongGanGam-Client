<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:layout_marginVertical="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_message_left_profile_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/default_profile_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_message_left_name_tv"
        android:text="이름"
        android:textSize="12sp"
        android:textColor="#C6C7E8"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_message_left_profile_iv"/>

    <TextView
        android:id="@+id/item_message_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1A227E"
        android:textSize="14sp"
        android:text="메시지"
        android:layout_marginTop="6dp"
        android:paddingVertical="7dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/left_message_9"
        app:layout_constraintTop_toBottomOf="@id/item_message_left_name_tv"
        app:layout_constraintStart_toEndOf="@id/item_message_left_profile_iv"
        android:layout_marginStart="6dp"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/item_message_left_time_tv"
        app:layout_constraintStart_toEndOf="@id/item_message_left_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="4dp"
        android:text="14:25"
        android:textColor="#C7C8E2"
        android:textSize="10sp" />

</androidx.constraintlayout.widget.ConstraintLayout>