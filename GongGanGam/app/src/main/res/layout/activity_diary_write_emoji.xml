<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#262D89"
    >

    <View
        android:id="@+id/diary_write_emoji_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </View>


    <ImageView
        android:id="@+id/diary_write_emoji_x_iv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/x_btn"
        app:layout_constraintTop_toTopOf="@id/diary_write_emoji_header"
        app:layout_constraintBottom_toBottomOf="@id/diary_write_emoji_header"
        app:layout_constraintEnd_toEndOf="@id/diary_write_emoji_header"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/diary_write_emoji_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기다리고 있었어요:)\n오늘의 감정은 어떤가요?"
        android:fontFamily="@font/omni_gothic_35"
        android:textSize="20sp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="98dp"
        android:layout_marginStart="26dp"
        />

<!--    <GridView-->
<!--        android:id="@+id/diary_write_emoji_gridView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="40dp"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/diary_write_emoji_tv"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        android:layout_marginStart="50dp"-->
<!--        android:numColumns="3"-->
<!--        tools:listitem="@layout/item_diary_write_emoji"-->
<!--        />-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diary_write_emoji_recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/diary_write_emoji_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_diary_write_emoji"
        />



    <android.widget.Button
        android:id="@+id/diary_write_emoji_unselect_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_inactive_background"
        android:text="선택"
        android:textSize="16sp"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        />

    <android.widget.Button
        android:id="@+id/diary_write_emoji_selected_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_active_background"
        android:text="선택"
        android:visibility="gone"
        android:textSize="16sp"
        android:textColor="#262D89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>